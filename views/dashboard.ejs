<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PortfolioTracker – Dashboard</title>
  <!-- Inter font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap"
    rel="stylesheet"
  >
  <!-- Dit stylesheet fra public-mappen -->
  <link rel="stylesheet" href="/styledashboard.css">
</head>
<body>
  <div class="app">
    <!-- SIDEBAR -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <img src="/logo.png" alt="Logo" class="logo-icon">
        <div class="logo-text">
          <h1>PORTFOLIOTRACKER</h1>
          <p>ORGANIZING YOUR FINANCES</p>
        </div>
        <button class="collapse-btn" aria-label="Skjul sidebar">❮</button>
      </div>
      <nav class="sidebar-nav">
        <ul>
          <li class="active"><span>Dashboard</span></li>
          <li><a href="/accounts"><span>Accounts</span></a></li>
          <li><a href="/portfolios"><span>Portfolios</span></a></li>
        </ul>
      </nav>
    </aside>

    <!-- HOVEDINDHOLD -->
    <main class="main-content">
      <!-- Sideoverskrift -->
      <header class="page-header">
        <h2>Dashboard</h2>
      </header>

      <!-- METRIKKORT -->
      <section class="metrics">
        <div class="card">
          <div class="label">Total værdi</div>
          <div class="value">
            <div id="totalValue">Indlæser…</div>
            <div class="change positive" id="totalChange">–</div>
          </div>
        </div>
        <div class="card">
          <div class="label">Realiseret gevinst</div>
          <div class="value">
            <div id="realizedProfit">Indlæser…</div>
            <div class="change positive" id="realizedChange">–</div>
          </div>
        </div>
        <div class="card">
          <div class="label">Urealiseret gevinst</div>
          <div class="value">
            <div id="unrealizedProfit">Indlæser…</div>
            <div class="change negative" id="unrealizedChange">–</div>
          </div>
        </div>
      </section>

      <!-- GRAF‐SEKTION -->
      <section class="chart-section">
        <div class="chart-header">
          <h3>Samlet værdi</h3>
          <span>Year to date</span>
        </div>
        <div class="chart-placeholder">[Chart Placeholder]</div>
      </section>

      <!-- TABELLER -->
      <section class="tables">
        <div class="table-container">
          <div class="table-header">
            <h4>Top 5 efter værdi</h4>
            <button>Se alle</button>
          </div>
          <table>
            <thead>
              <tr><th>Name</th><th>Value</th></tr>
            </thead>
            <tbody id="tableByValue"></tbody>
          </table>
        </div>
        <div class="table-container">
          <div class="table-header">
            <h4>Top 5 efter profit</h4>
            <button>Se alle</button>
          </div>
          <table>
            <thead>
              <tr><th>Name</th><th>Profit</th></tr>
            </thead>
            <tbody id="tableByProfit"></tbody>
          </table>
        </div>
      </section>
    </main>
  </div>

  <!-- Eksponér USER_ID til klient-scriptet -->
  <script>
    window.USER_ID = <%= JSON.stringify(user.id) %>;
  </script>
  <!-- nederst i views/dashboard.ejs -->
  <script src="/client-dashboard.js"></script>


</body>
</html>
