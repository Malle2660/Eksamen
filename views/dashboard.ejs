<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link rel="stylesheet" href="/styledashboard.css">
</head>
<body>
  <div class="app">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-header">
        <img src="/logo.png" alt="Logo" class="logo-icon" />
        <div class="logo-text">
          <h1>PORTFOLIOTRACKER</h1>
          <p>Organizing your finances</p>
        </div>
        <button class="collapse-btn">⮞</button>
      </div>

      <nav class="sidebar-nav">
        <ul>
          <li class="active">Dashboard</li>
          <li><a href="/accounts">Accounts</a></li>
          <li><a href="/portfolios">Portfolios</a></li>
        </ul>
      </nav>
    </aside>

    <!-- Main content -->
    <main class="main-content">
      <header class="page-header">
        <h2>Dashboard</h2>
      </header>

      <section class="metrics">
        <div class="card">
          <div class="label">Total værdi</div>
          <div class="value"><%= overview.totalExpected.toFixed(2) %> DKK</div>
        </div>
        <div class="card">
          <div class="label">Realiseret gevinst</div>
          <div class="value">0,00 DKK</div> <!-- Placeholder -->
        </div>
        <div class="card">
          <div class="label">Urealiseret gevinst</div>
          <div class="value"><%= overview.totalUnrealized.toFixed(2) %> DKK</div>
        </div>
      </section>

      <section class="chart-section">
        <div class="chart-header">
          <h3>Samlet værdi</h3>
          <span>Year to date</span>
        </div>
        <div class="chart-placeholder">
          [Chart Placeholder]
        </div>
      </section>

      <section class="tables">
        <div class="table-container">
          <div class="table-header">
            <h4>Top 5 efter værdi</h4>
            <button>Se alle</button>
          </div>
          <table>
            <thead>
              <tr><th>NAME</th><th>VALUE</th></tr>
            </thead>
            <tbody id="tableByValue">
              <% topValue.forEach(item => { %>
                <tr>
                  <td><%= item.symbol %></td>
                  <td><%= item.value.toFixed(2) %> DKK</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <div class="table-container">
          <div class="table-header">
            <h4>Top 5 efter profit</h4>
            <button>Se alle</button>
          </div>
          <table>
            <thead>
              <tr><th>NAME</th><th>PROFIT</th></tr>
            </thead>
            <tbody id="tableByProfit">
              <% topProfit.forEach(item => { %>
                <tr>
                  <td><%= item.symbol %></td>
                  <td><%= item.profit.toFixed(2) %> DKK</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    </main>
  </div>
</body>
</html>
