<!-- views/Portføljeoversigt/portfolio.ejs -->
<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>PortfolioTracker – Porteføljeoversigt</title>

  <!-- Inter font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap"
    rel="stylesheet"
  />

  <!-- Dit eget stylesheet -->
  <link rel="stylesheet" href="/portfolio-oversigt.css" />
</head>
<body>
  <div class="app">
    <!-- SIDEBAR (samme markup som i dashboard) -->
    <aside class="sidebar">
      <!-- … dit sidebar‐HTML … -->
    </aside>

    <!-- HOVEDINDHOLD -->
    <main class="main-content">
      <header class="page-header">
        <h2>Porteføljeoversigt</h2>
      </header>

      <!-- METRIKKORT -->
      <section class="metrics">
        <div class="card">
          <div class="label">Antal porteføljer</div>
          <div class="value"><%= portfolios.length %></div>
        </div>
        <div class="card">
          <div class="label">Samlet værdi</div>
          <div class="value">
            <%= portfolios
                 .reduce((sum,p) => sum + (p.value||0), 0)
                 .toLocaleString() %> DKK
          </div>
        </div>
        <div class="card">
          <div class="label">Daglig ændring</div>
          <div class="value">
            <div class="change <%= dailyChange >= 0 ? 'positive' : 'negative' %>">
              <!-- pil-ikon kan du indsætte her eller via CSS -->
              <%= (dailyChange >= 0 ? '+' : '') + dailyChange.toFixed(1) %>%
            </div>
            <div>
              <%= (dailyDKKChange >= 0 ? '+' : '') 
                   + dailyDKKChange.toLocaleString() %> DKK
            </div>
          </div>
        </div>
      </section>

      <!-- PORTFØLJETABEL -->
      <section class="tables">
        <div class="table-container">
          <div class="table-header">
            <h4>Alle porteføljer</h4>
            <button id="createPortfolioBtn">Opret ny</button>
          </div>
          <table>
            <thead>
              <tr>
                <th>Navn</th>
                <th>Værdi</th>
                <th>24h Change</th>
                <th>Realiseret gevinst</th>
              </tr>
            </thead>
            <tbody>
              <% portfolios.forEach(p => { %>
                <tr>
                  <td><%= p.name %></td>
                  <td class="value"><%= p.value.toLocaleString() %> DKK</td>
                  <td>
                    <span class="percent <%= p.change >= 0 ? 'positive' : 'negative' %>">
                      <%= (p.change >= 0 ? '+' : '') + p.change.toFixed(1) %>%
                    </span>
                  </td>
                  <td class="value"><%= p.realizedGain.toLocaleString() %> DKK</td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>

        <!-- GRAF‐SEKTION -->
        <div class="table-container">
          <div class="table-header">
            <h4>Porteføljegraf</h4>
          </div>
          <div class="chart-placeholder" style="height: 320px;">
            [Chart Placeholder]
          </div>
        </div>
      </section>
    </main>
  </div>

  <!-- Eksponér bruger‐ID til klienten -->
  <script>
    window.USER_ID = <%= userId %>;
  </script>
  <!-- Klient‐scriptet til porteføljeoversigt -->
  <script src="/portfoliooversigt.js"></script>
</body>
</html>
