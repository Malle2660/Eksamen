<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>PortfolioTracker – Porteføljeoversigt</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/portfolio-oversigt.css" />
</head>
<body>
  <div class="app">
    <aside class="sidebar">
      <div class="sidebar-header">
        <div class="logo-text">
          <h1>PortfolioTracker</h1>
          <p>Invest smarter</p>
        </div>
      </div>
    </aside>

    <main class="main-content">
      <header class="page-header">
        <h2>Porteføljeoversigt</h2>
      </header>

      <section class="metrics">
        <div class="card">
          <div class="label">Antal porteføljer</div>
          <div class="value" id="overviewCount"><%= portfolios.length %></div>
        </div>
        <div class="card">
          <div class="label">Samlet værdi</div>
          <div class="value" id="overviewTotalValue"><%= totalValue.toFixed(2) %> DKK</div>
        </div>
        <div class="card">
          <div class="label">Daglig ændring</div>
          <div class="value">
            <div class="change positive" id="overviewChangePercent"><%= dailyChange.toFixed(2) %>%</div>
            <div id="overviewChangeValue"><%= dailyDKKChange.toFixed(2) %> DKK</div>
          </div>
        </div>
      </section>

      <section class="tables">
        <div class="table-container">
          <div class="table-header">
            <h4>Alle porteføljer</h4>
            <button id="createPortfolioBtn">Opret ny</button>
          </div>
          <table>
            <thead>
              <tr>
                <th>Navn</th>
                <th>Værdi</th>
                <th>24h Change</th>
                <th>Realiseret gevinst</th>
                <th>Urealiseret gevinst</th>
                <th>Forventet værdi</th>
                <th>Oprettet</th>
              </tr>
            </thead>
            <tbody id="portfolioTableBody">
              <!-- Fyldes af JS -->
            </tbody>
          </table>
        </div>

        <div class="table-container">
          <div class="table-header">
            <h4>Porteføljegraf</h4>
          </div>
          <div class="chart-placeholder" style="height: 320px;">
            [Chart Placeholder]
          </div>
        </div>
      </section>
    </main>
  </div>

  <script>
    window.USER_ID = <%= JSON.stringify(user.id) %>;
  </script>
  <script src="/js/portfoliooversigt.js"></script>
</body>
</html>
