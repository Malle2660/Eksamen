<!-- views/Portføljeoversigt/portfolio.ejs -->
<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>PortfolioTracker – Porteføljeoversigt</title>

  <!-- Inter font -->
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap"
    rel="stylesheet"
  />

  <!-- Dit eget stylesheet -->
  <link rel="stylesheet" href="/portfolio-oversigt.css" />
</head>
<body>
  <div class="app">
    <!-- SIDEBAR (samme markup som i dashboard) -->
    <aside class="sidebar">
      <!-- … dit sidebar‐HTML … -->
    </aside>

    <!-- HOVEDINDHOLD -->
    <main class="main-content">
      <header class="page-header">
        <h2>Porteføljeoversigt</h2>
      </header>

      <!-- METRIKKORT -->
      <section class="metrics">
        <div class="card">
          <div class="label">Antal porteføljer</div>
          <div class="value" id="overviewCount">0</div>
        </div>
        <div class="card">
          <div class="label">Samlet værdi</div>
          <div class="value" id="overviewTotalValue">0 DKK</div>
        </div>
        <div class="card">
          <div class="label">Daglig ændring</div>
          <div class="value">
            <div class="change positive" id="overviewChangePercent">+0.0%</div>
            <div id="overviewChangeValue">+0 DKK</div>
          </div>
        </div>
      </section>

      <!-- PORTFØLJETABEL -->
      <section class="tables">
        <div class="table-container">
          <div class="table-header">
            <h4>Alle porteføljer</h4>
            <button id="createPortfolioBtn">Opret ny</button>
          </div>
          <table>
            <thead>
              <tr>
                <th>Navn</th>
                <th>Værdi</th>
                <th>24h Change</th>
                <th>Realiseret gevinst</th>
              </tr>
            </thead>
            <tbody id="portfolioTableBody">
              <!-- JS fylder rækker her -->
            </tbody>
          </table>
        </div>

        <!-- GRAF‐SEKTION -->
        <div class="table-container">
          <div class="table-header">
            <h4>Porteføljegraf</h4>
          </div>
          <div class="chart-placeholder" style="height: 320px;">
            [Chart Placeholder]
          </div>
        </div>
      </section>
    </main>
  </div>

  <!-- Eksponér bruger‐ID til klienten via session -->
  <script>
    window.USER_ID = <%= JSON.stringify(user.id) %>;
  </script>
  <!-- HUSK: scriptet ligger i public/js/portfolio.js -->
  <script src="/portfolio.js"></script>
</body>
</html>
