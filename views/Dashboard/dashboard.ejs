<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>PortfolioTracker Dashboard</title>

  <!-- Inter font -->
  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Inter:wght@600;700&display=swap"
  >

  <!-- Dit stylesheet fra public-mappen -->
  <link rel="stylesheet" href="/styledashboard.css">
</head>
<body>
  <div class="app">
    <!-- SIDEBAR -->
    <aside class="sidebar">
      <!-- … alt dit sidebar-HTML uændret … -->
    </aside>

    <!-- HOVEDINDHOLD -->
    <main class="main-content">
      <!-- Sideoverskrift -->
      <header class="page-header">
        <h2>Dashboard</h2>
      </header>

      <!-- METRIKKORT -->
      <section class="metrics">
        <div class="card">
          <div class="label">Total værdi</div>
          <div class="value">
            <div class="change positive" id="totalChange">–</div>
            <div id="totalValue">Indlæser…</div>
          </div>
        </div>
        <div class="card">
          <div class="label">Total Realiseret gevinst</div>
          <div class="value">
            <div class="change positive" id="realizedChange">–</div>
            <div id="realizedProfit">Indlæser…</div>
          </div>
        </div>
        <div class="card">
          <div class="label">Total Urealiseret Gevinst</div>
          <div class="value">
            <div class="change negative" id="unrealizedChange">–</div>
            <div id="unrealizedProfit">Indlæser…</div>
          </div>
        </div>
      </section>

      <!-- GRAF-SEKTION -->
      <section class="chart-section">
        <div class="chart-header">
          <h3>Samlet Værdi</h3>
          <span>Year to date</span>
        </div>
        <div class="chart-placeholder">[Chart Placeholder]</div>
      </section>

      <!-- TABELLER -->
      <section class="tables">
        <div class="table-container">
          <div class="table-header">
            <h4>Top 5 værdipapirer baseret på værdi</h4>
            <button>Se All</button>
          </div>
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Portfolio</th>
                <th>24h Change</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody id="tableByValue">
              <!-- JS fylder rækker her -->
            </tbody>
          </table>
        </div>

        <div class="table-container">
          <div class="table-header">
            <h4>Top 5 værdipapirer baseret på profit</h4>
            <button>Se All</button>
          </div>
          <table>
            <thead>
              <tr>
                <th>Name</th>
                <th>Portfolio</th>
                <th>24h Change</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody id="tableByProfit">
              <!-- JS fylder rækker her -->
            </tbody>
          </table>
        </div>
      </section>
    </main>
  </div>

  <!-- Eksponér userId til klienten -->
  <script>
    // Bruger 'user' objektet du sendte via res.render(...)
    window.USER_ID = <%= JSON.stringify(user.id) %>;
  </script>

  <!-- Dit dashboard-specifikke klient-script -->
  <script src="/client-dashboard.js"></script>
</body>
</html>
